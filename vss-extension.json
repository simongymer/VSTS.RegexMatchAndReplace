{
    "manifestVersion": 1,
    "id": "regex-match-replace",
    "name": "RegEx Match & Replace",
    "publisher": "simon-gymer",
    "version": "1.4.0",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Azure Devops Task to replace file content with a regex match",
    "categories": [
        "Azure Pipelines"
    ],
    "screenshots": [
        {
            "path": "screenshots/screenshot-0.png"
        }
    ],
    "tags": [ "regex", "regular-expressions", "pattern-match", "match", "find-and-replace", "replace", "matching" ],
    "icons": {
        "default": "marketplace-icon.png"        
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.md"
        },
        "privacypolicy": {
            "path": "privacy-policy.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/simongymer/VSTS.RegexMatchAndReplace/wiki"
        },
        "support": {
            "uri": "https://github.com/simongymer/VSTS.RegexMatchAndReplace/issues"
        },
        "repository": {
            "uri": "https://github.com/simongymer/VSTS.RegexMatchAndReplace"
        },
        "issues": {
            "uri": "https://github.com/simongymer/VSTS.RegexMatchAndReplace/issues"
        }
    },
    "branding": {
        "color": "rgb(211, 224, 235)",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/simongymer/VSTS.RegexMatchAndReplace"
    },
    "files": [
        {
            "path": "dist/BuildTask"
        },
        {
            "path": "screenshots",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "regex-match-replace",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "dist/BuildTask/RegexMatchReplace"
            }
        }
    ],
    "CustomerQnASupport": {
        "enableqna":"true"
    } 
}